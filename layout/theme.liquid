<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {% # Social, title, etc. %}
    {% render 'meta-tags' %}
    {{ 'public.css' | asset_url | stylesheet_tag: preload: true }}
    <script src="{{ 'public.js' | asset_url }}" defer></script>

    {{ 'global-header.css' | asset_url | stylesheet_tag }}
    {{ 'splide.min.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body class="font-en">
    {% sections 'header-group' %}
    <div class="blank-top h-100"></div>

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
