<style>
      .breadcrumb {
          background-color: #f8f9fa;
          padding: 10px 0;
          border-bottom: 1px solid #e9ecef;
      }
      .breadcrumb-nav {
          display: flex;
          align-items: center;
          font-size: 14px;
          color: #666666;
      }
      .breadcrumb-nav a {
          color: #dc2626;
          text-decoration: none;
          margin-right: 8px;
      }
      .breadcrumb-separator {
          margin: 0 8px;
          color: #999999;
      }
      {% comment %} 490 {% endcomment %}
      .sidebar {
          width:26.2368421%;
          background-color: #f8f9fa;
          border-radius: 8px;
          padding: 0;
          height: fit-content;
          border: 1px solid #e9ecef;

      }
      .user-avatar {
        display: flex
    ;
        align-items: center;
        padding: 20px;
        background-color: white;
        border-bottom: 1px solid #e9ecef;
    }

      .avatar-circle {
          width: 50px;
          height: 50px;
          border-radius: 50%;
          background-color: #dc2626;
          color: white;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 20px;
          font-weight: bold;
          margin-right: 15px;
      }
      .user-info {
        flex: 1;
    }
    .nav-menu li {
        border-bottom: 1px solid #e9ecef;
    }
    .nav-menu a.active {
      background-color: #dc2626;
      color: white;
  }
  .nav-menu a {
      display: block;
      padding: 15px 20px;
      color: #333333;
      text-decoration: none;
      transition: all 0.3s ease;
      font-weight: 500;
  }
  .nav-menu a:hover {
      background-color: #dc2626;
      color: white;
  }
  .content {
      flex: 1;
      background-color: white;
      border-radius: 8px;
      padding: 30px;
      border: 1px solid #e9ecef;
  }
  .content h2 {
      color: #dc2626;
      margin-bottom: 20px;
      font-size: 24px;
      border-bottom: 2px solid #dc2626;
      padding-bottom: 10px;
  }
  .order-summary {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin-top: 20px;
  }
  .order-item {
      display: flex
  ;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #dee2e6;
  }
  .status-completed {
      background-color: #d4edda;
      color: #155724;
  }

  .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
  }
  .status-processing {
      background-color: #cce5ff;
      color: #004085;
  }
  .status-paid { background-color: #d4edda; color: #155724; }
.status-pending { background-color: #fff3cd; color: #856404; }
.status-cancelled { background-color: #f8d7da; color: #721c24; }
.status-refunded { background-color: #e2e3e5; color: #383d41; }
</style>
<div class="breadcrumb mt-40 mb-40">
  <div class="wrap">
    <div class="max-w-1520 mx-auto">
      <nav class="breadcrumb-nav">
        <a href="#">Home</a>
        <span class="breadcrumb-separator">&gt;</span>
        <span class="breadcrumb-current" id="breadcrumb-current">{{ page_title | default: "Account Dashboard" }}</span>
      </nav>
    </div>
  </div>
</div>

<div class="max-w-1520 mx-auto">
  <div class="wrap">
    <div class="account-layout flex gap-30">
      <div class="sidebar">
        <div class="user-avatar flex items-center">
            <div class="avatar-circle">{{ customer.first_name | slice: 0 | upcase }}</div>
            <div class="user-info">
              <div class="name tex-18 font-600 text-black mb-10">{{ customer.first_name }} {{ customer.last_name }}</div>
              <div class="email text-16 text-black">{{ customer.email }}</div>
            </div>
        </div>
        <ul class="nav-menu">
          <li><a href="#" class="active">Orders</a></li>
          {% comment %} <li><a href="#" class="">Addresses</a></li>
          <li><a href="#" class="">Dashboard</a></li>
          <li><a href="#" class="">Profile</a></li>
          <li><a href="#" class="">Wishlist</a></li>
          <li><a href="#" class="">Settings</a></li> {% endcomment %}
          <li><a href="{{ routes.account_logout_url }}">Logout</a></li>
        </ul>
      </div>
      <div class="content">
        <div class="section" id="order">
          <h2 class="text-red text-32">My Orders</h2>
          <div class="order-summary">
            {% if customer.orders.size > 0 %}
              {% for order in customer.orders %}
                <div class="order-item">
                  <div>
                    <strong>Order #{{ order.order_number }}</strong>
                    <div>
                      {% for line_item in order.line_items limit: 3 %}
                        {{ line_item.product.title }}{% unless forloop.last %}, {% endunless %}
                      {% endfor %}
                      {% if order.line_items.size > 3 %}
                        <span>+{{ order.line_items.size | minus: 3 }} more</span>
                      {% endif %}
                    </div>
                    <div>{{ order.created_at | date: "%B %d, %Y" }}</div>
                  </div>
                  <div>
                    <span>{{ order.total_price | money }}</span>
                    <span class="status-badge status-{{ order.financial_status }}">
                      {{ order.financial_status | capitalize }}
                    </span>
                  </div>
                </div>
              {% endfor %}
            {% else %}
              <div class="order-item">
                <div>No orders found</div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "客户账户",
  "settings": [],
  "presets": [
    {
      "name": "客户账户"
    }
  ]
}
{% endschema %}
