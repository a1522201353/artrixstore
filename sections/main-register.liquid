<style>
    .errors {
      background: #f9edec;
      border-radius: 5px;
      color: red;
    }
  
    .errors ul {
      list-style: none;
      padding: 4px 15px;
    }
  </style>
  
  <div class="pt-120 pb-160">
    <div class="wrap">
      <div class="max-w-1100 mx-auto">
        <h1 class="text-68 font-700 text-red text-center leading-1">
          Sign Up
        </h1>
        
        <!-- 注册表单 -->
        {% form 'create_customer', id: 'registerForm', novalidate: 'novalidate' %}
          <div class="alert-warning mt-40" role="alert">
            {{ form.errors | default_errors }}
          </div>
  
          <div class="contact-form flex flex-wrap gap-40 mt-60">
            <!-- 名字字段 -->
            <div class="cform-item col-50">
              <input
                id="customer_first_name"
                type="text"
                name="customer[first_name]"
                placeholder="First Name"
                class="cform-input text-16 {% if form.errors.first_name %}input-error{% endif %}"
                value="{{ form.first_name }}"
                autocomplete="given-name"
                {% if form.errors.first_name %}
                  aria-invalid="true"
                  aria-describedby="first-name-error"
                {% endif %}
                required
              >
              {% if form.errors.first_name %}
                <span id="first-name-error" class="form-error text-red text-14">{{ form.errors.first_name }}</span>
              {% endif %}
            </div>
  
            <!-- 姓氏字段 -->
            <div class="cform-item col-50">
              <input
                id="customer_last_name"
                type="text"
                name="customer[last_name]"
                placeholder="Last Name"
                class="cform-input text-16 {% if form.errors.last_name %}input-error{% endif %}"
                value="{{ form.last_name }}"
                autocomplete="family-name"
                {% if form.errors.last_name %}
                  aria-invalid="true"
                  aria-describedby="last-name-error"
                {% endif %}
                required
              >
              {% if form.errors.last_name %}
                <span id="last-name-error" class="form-error text-red text-14">{{ form.errors.last_name }}</span>
              {% endif %}
            </div>
  
            <!-- 邮箱字段 -->
            <div class="cform-item col-50">
              <input
                id="customer_email"
                type="email"
                name="customer[email]"
                placeholder="E-mail"
                class="cform-input text-16 {% if form.errors.email %}input-error{% endif %}"
                value="{{ form.email }}"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors.email %}
                  aria-invalid="true"
                  aria-describedby="email-error"
                {% endif %}
                required
              >
              {% if form.errors.email %}
                <span id="email-error" class="form-error text-red text-14">{{ form.errors.email }}</span>
              {% endif %}
            </div>
  
            <!-- 密码字段 -->
            <div class="cform-item col-50">
              <input
                id="customer_password"
                type="password"
                name="customer[password]"
                placeholder="Password"
                class="cform-input text-16 {% if form.errors.password %}input-error{% endif %}"
                autocomplete="new-password"
                {% if form.errors.password %}
                  aria-invalid="true"
                  aria-describedby="password-error"
                {% endif %}
                required
              >
              {% if form.errors.password %}
                <span id="password-error" class="form-error text-red text-14">{{ form.errors.password }}</span>
              {% endif %}
            </div>
          </div>
  
          <!-- 登录链接 -->
          <div class="llogin-tip flex flex-wrap justify-center mt-30">
            <div class="text-gray text-16">
              Already have an account? Please
              <a
                href="{{ routes.account_login_url }}"
                class="text-gray text-16 left-15 hover:text-black transition-color underline"
              >
                Login
              </a>
            </div>
          </div>
  
          <div class="text-center">
            <button
              type="submit"
              class="text-20 mt-60 infobank-link inline-block bg-red text-white text-center cursor-pointer border-0"
              id="register-submit"
            >
              Create Account
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
  
  <script src="{{ 'va-login.js' | asset_url }}" defer></script>
  
  {% schema %}
  {
    "name": "客户注册",
    "settings": [],
    "presets": [
      {
        "name": "客户注册"
      }
    ]
  }
  {% endschema %}