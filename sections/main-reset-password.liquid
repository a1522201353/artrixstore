<style>
    .errors {
      background: #f9edec;
      border-radius: 5px;
      color: red;
    }
  
    .errors ul {
      list-style: none;
      padding: 4px 15px;
    }
  </style>


<div class="pt-120 pb-160">
    <div class="wrap">
      <div class="max-w-1220 comm-layer-body mx-auto bg-white relative rounded-sm">
        <div class="layer-login flex justify-center">
          <div class="llogin-right flex items-center">
            <div class="w-full">
              <div class="max-w-480 mx-auto">
                <div id="reset-password-container">
                  <div class="text-68 font-700 text-red text-center leading-1">Reset Password</div>
                  <p class="text-center text-gray text-16 mt-20">Enter your new password below.</p>
  
                  <!-- 密码重置表单 -->
                  {% form 'reset_customer_password', id: 'resetPasswordForm', novalidate: 'novalidate' %}
                    <div class="alert-warning mt-40" role="alert">
                      {{ form.errors | default_errors }}
                    </div>
  
                    <div class="flex flex-wrap gap-y-30 mt-60">
                      <!-- 新密码字段 -->
                      <div class="cform-item w-full">
                        <input
                          id="customer_password"
                          type="password"
                          name="customer[password]"
                          placeholder="New Password"
                          class="cform-input text-16 {% if form.errors.password %}input-error{% endif %}"
                          autocomplete="new-password"
                          {% if form.errors.password %}
                            aria-invalid="true"
                            aria-describedby="password-error"
                          {% endif %}
                          required
                        >
                        {% if form.errors.password %}
                          <span id="password-error" class="form-error text-red text-14">{{ form.errors.password }}</span>
                        {% endif %}
                      </div>
  
                      <!-- 确认密码字段 -->
                      <div class="cform-item w-full">
                        <input
                          id="customer_password_confirmation"
                          type="password"
                          name="customer[password_confirmation]"
                          placeholder="Confirm New Password"
                          class="cform-input text-16 {% if form.errors.password_confirmation %}input-error{% endif %}"
                          autocomplete="new-password"
                          {% if form.errors.password_confirmation %}
                            aria-invalid="true"
                            aria-describedby="password-confirmation-error"
                          {% endif %}
                          required
                        >
                        {% if form.errors.password_confirmation %}
                          <span id="password-confirmation-error" class="form-error text-red text-14">{{ form.errors.password_confirmation }}</span>
                        {% endif %}
                      </div>
                    </div>
  
                    
  
                    <div class="text-center">
                      <button
                        type="submit"
                        class="text-20 mt-60 infobank-link inline-block bg-red text-white text-center cursor-pointer border-0"
                        id="reset-password-submit"
                      >
                        Reset Password
                      </button>
                    </div>
  
                    
                  {% endform %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="{{ 'va-login.js' | asset_url }}" defer></script>
{% schema %}
{
  "name": "重置密码",
  "settings": [],
  "presets": [
    {
      "name": "重置密码"
    }
  ]
}
{% endschema %}