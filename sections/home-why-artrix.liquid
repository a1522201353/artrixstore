<style>
    .whas-item {
      width: calc(33.333333% - 20px);
    }
    .whas-item::before {
      padding-top: 136.986301%;
    }
    .whas-item-top::before {
      padding-top: calc(136.986301% / 2);
    }
    .whas-item-bottom::before {
      padding-top: calc(136.986301% / 2);
    }
    .whas-item-top02::before {
      padding-top: calc(136.986301% / 3);
    }
    .whas-item-bottom02::before {
      padding-top: calc(136.986301% / 3 * 2);
    }
  </style>
  
  <div class="py-100">
    <div class="wrap">
      <div class="max-w-1520 mx-auto">
        <div class="text-32 leading-12 font-700">{{ section.settings.title | default: 'Why Artrix Store' }}</div>
        <div class="mt-20 flex gap-20 justify-between">
          <!-- First Item: Rewards -->
          <div class="whas-item img-box stagger-animate" style="--index: 0;">
            {% if section.settings.image %}
              <img
                src="{{ section.settings.image | img_url: 'master' }}"
                alt="{{ section.settings.image.alt | default: section.settings.title }}"
              >
            {% endif %}
            <div class="absolute top-20 left-20 text-24 leading-12">
              <div>{{ section.settings.spend_text | default: 'Spend $1' }}</div>
              <div>{{ section.settings.reward_text | default: 'Earn 1 Artrix Credit Reward' }}</div>
            </div>
          </div>
          
          <!-- Second Item: Shipping -->
          <div class="whas-item flex flex-col gap-20 justify-between stagger-animate" style="--index: 1;">
            <div class="whas-item-top img-box w-full">
              {% if section.settings.shipping_image_1 %}
                <img 
                  src="{{ section.settings.shipping_image_1 | img_url: 'master' }}"
                  alt="{{ section.settings.shipping_image_1.alt | default: section.settings.free_shipping_text }}"
                >
              {% endif %}
              <div class="text-center leading-12 text-24 leading-12 absolute top-40 left-0 right-0 bottom-0">
                <div>{{ section.settings.free_shipping_text | default: 'Over $50 Ships Free' }}</div>
              </div>
            </div>
            <div class="whas-item-bottom img-box w-full">
              {% if section.settings.shipping_image_2 %}
                <img 
                  src="{{ section.settings.shipping_image_2 | img_url: 'master' }}"
                  alt="{{ section.settings.shipping_image_2.alt | default: section.settings.fast_shipping_text }}"
                >
              {% endif %}
              <div class="text-center leading-12 text-24 leading-12 absolute top-40 left-0 right-0 bottom-0">
                <div>{{ section.settings.fast_shipping_text | default: 'Shipped within 24H' }}</div>
              </div>
            </div>
          </div>
          
          <!-- Third Item: Returns & Support -->
          <div class="whas-item flex flex-col gap-20 justify-between stagger-animate" style="--index: 2;">
            <div class="whas-item-top02 img-box w-full">
              {% if section.settings.returns_image %}
                <img 
                  src="{{ section.settings.returns_image | img_url: 'master' }}"
                  alt="{{ section.settings.returns_image.alt | default: section.settings.returns_text }}"
                >
              {% endif %}
              <div class="absolute top-20 left-20 text-24 leading-12">
                {{ section.settings.returns_text | default: '7-Day Returns' }}
              </div>
            </div>
            <div class="whas-item-bottom02 img-box w-full">
              {% if section.settings.support_image %}
                <img 
                  src="{{ section.settings.support_image | img_url: 'master' }}"
                  alt="{{ section.settings.support_image.alt | default: 'Support' }}"
                >
              {% endif %}
              <div class="absolute top-20 left-20 text-24 leading-12">
                <div>{{ section.settings.support_text_1 | default: 'Get Artrix' }}</div>
                <div>{{ section.settings.support_text_2 | default: 'Expert Help' }}</div>
              </div>
            </div>
          </div>
          
          <!-- Fourth Item: Partner Benefits -->
          <div class="whas-item img-box stagger-animate" style="--index: 3;">
            {% if section.settings.partner_image %}
              <img 
                src="{{ section.settings.partner_image | img_url: 'master' }}"
                alt="{{ section.settings.partner_image.alt | default: 'Partner Benefits' }}"
              >
            {% endif %}
            <div class="absolute top-20 left-20 text-24 leading-12">
              <div>{{ section.settings.partner_text_1 | default: 'Official' }}</div>
              <div>{{ section.settings.partner_text_2 | default: 'Partner Benefits' }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
